   <body>
      <div id="container">
         <div id="header_row">
            <h1>Hello World</h1>
         </div>

         <div id="get_all_info"><% %></div>

         <div id="form_wrap">
            <p>Create a new animal</p>
            <form action="/animal/new" method="POST">
               Name: <input type="text" name="name" /> Age:
               <input type="number" name="age" />
               <button type="submit">Click me!</button>
            </form>
         </div>

         <div id="links">
            <a href="/animal">Farm</a>
         </div>
      </div>
   </body>
